<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Admin Panel{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400;700&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/665d94e5f3.js" crossorigin="anonymous"></script>  
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="flex">
            <div class="w-1/5 bg-gradient-to-r from-gray-600 to-slate-500 h-screen flex-row text-center text-white space-y-6">
                <p class="text-4xl mt-4  border-b-4 border-gray-700 pb-4">Admin Panel</p>
                <div class="text-xl flex-col flex space-y-6">
                    <div class="flex-col flex">
                        <p class="text-3xl"><i class="fa-solid fa-shirt"></i> Products</p>
                        <a href="{{ path('admin-store') }}" class="hover:bg-gray-700 py-2 rounded-md transition ease-in-out delay-50 hover:-translate-y-1 hover:scale-110 duration-300">Add Product</a>
                        <a href="{{ path('admin-products') }}" class="hover:bg-gray-700 py-2 rounded-md transition ease-in-out delay-50 hover:-translate-y-1 hover:scale-110 duration-300">Manage Products</a>
                    </div>
                    <div class="flex-col flex">
                        <p class="text-3xl"><i class="fa-solid fa-user"></i> Users</p>
                        <a href="{{ path('admin-users') }}" class="hover:bg-gray-700 py-2 rounded-md transition ease-in-out delay-50 hover:-translate-y-1 hover:scale-110 duration-300">All Users</a>
                    </div>
                    <div class="flex-col flex">
                        <p class="text-3xl"><i class="fa-regular fa-file"></i> Orders</p>
                        <a href="{{ path('admin-orders') }}" class="hover:bg-gray-700 py-2 rounded-md transition ease-in-out delay-50 hover:-translate-y-1 hover:scale-110 duration-300">All Orders</a>
                    </div>
                </div>
            </div>
            <div class="w-4/5 h-screen bg-gray-200">
                {% block body %}
                {% endblock %}
            </div>
        </div>   
    </body>
</html>
